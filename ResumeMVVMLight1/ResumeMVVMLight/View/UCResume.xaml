<UserControl x:Class="ResumeMVVMLight.View.UCResume"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ResumeMVVMLight.View"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="125">
    <Grid>
        <Label Content="{Binding Name}"
               HorizontalAlignment="Left" 
               Margin="5,5,0,0" 
               VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Label Content="{Binding Skills}" 
               HorizontalAlignment="Left" 
               Margin="5,44,0,0" 
               VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Label Content="{Binding Experience}" 
               HorizontalAlignment="Left" 
               Margin="5,77,0,0" 
               VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
    </Grid>
</UserControl>
