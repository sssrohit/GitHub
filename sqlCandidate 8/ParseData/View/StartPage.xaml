<Window x:Class="ParseData.View.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Super Simple Software" Height="500" Width="1500">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top"  Height="30" Margin="0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <MenuItem Header="File" Height="30" FontWeight="Bold">
                    <MenuItem Header="Exit" Click="MenuItem_Click_1"/>
                </MenuItem>
                <MenuItem Header="About Us" FontWeight="Bold" Click="MenuItem_Click"/>
            </Menu>
        </DockPanel>

        <StackPanel Orientation="Horizontal" Height="100" VerticalAlignment="Top" Margin="0,30,0,0">
            <Button Name="loadBtn" Content="Load" Click="loadBtn_Click" Width="496" FontSize="30" FontWeight="Bold"/>
            <Button Name="validateBtn" Content="Validation" Click="validateBtn_Click" Width="496" FontSize="30" FontWeight="Bold"/>
            <Button Name="searchBtn" Content="Search" Width="502" FontSize="30" FontWeight="Bold" Click="searchBtn_Click"/>

        </StackPanel>
    </Grid>
</Window>
